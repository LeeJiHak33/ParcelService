<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">
	<select id="item" resultType="Product">
		SELECT *
		FROM product
		WHERE id=#{id}
	</select>
	
	<insert id="add">
		INSERT INTO product
		VALUES(#{id}, #{title}, #{price}, #{publisher})
	</insert>
	
	<select id="list" resultType="Product">
		SELECT *
		FROM product
	</select>
	
	<update id="update">
		UPDATE product
		SET id=#{id}, title=#{title}, price=#{price}, publisher=#{publisher}
		WHERE id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM product
		WHERE id=#{id}
	</delete>

</mapper>